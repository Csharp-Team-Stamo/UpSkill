@using Microsoft.AspNetCore.Components.Authorization
@using UpSkill.ClientSide.Authentication.Services.Contracts
@using UpSkill.ClientSide.Controls

@inject IAuthenticationService AuthenticationService


<div class="top-row pl-4 navbar navbar-dark" >
    <a href="">
        <svg alt="upskill_logo" xmlns="http://www.w3.org/2000/svg" width="60.282" height="24.283" viewBox="0 0 60.282 24.283">
            <g id="Group_5" data-name="Group 5" transform="translate(-218.902 -339.173)">
                <path id="Path_3" data-name="Path 3" d="M182.893,253.462H169.987l16.8-18.491L207.834,252.4l12.8-17.433" transform="translate(54 107.744)" fill="none" stroke="#296cfb" stroke-width="4.5" />
                <path id="Path_4" data-name="Path 4" d="M303.565,341.091h21.88v21.882" transform="translate(-48.511 0.332)" fill="none" stroke="#296cfb" stroke-width="4.5" />
            </g>
        </svg>
    </a>

    <a class="brand" href="">UpSkill</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass sidebar" @onclick="ToggleNavMenu">

    <ul class="nav flex-column align-content-start">
        <li class="nav-item px-3">
            <div class="d-inline-flex p-3 align-content-center">
                <Avatar></Avatar>
                <div class="ml-2">
                    <div class=" mt-1 pb-1">
                        Christo Peev
                    </div>
                    <div class="my-1">
                        Motion Software
                    </div>
                </div>
            </div>
        </li>

        <li class="nav-item ">
            <NavLink class="nav-link" href="Dashboard">
                Dashboard
            </NavLink>
        </li>

        <li class="nav-item">
            <NavLink class="nav-link" href="Courses">
                Courses
            </NavLink>
        </li>
        <li class="nav-item">
            <NavLink class="nav-link" href="Coaches">
                Coaches
            </NavLink>
        </li>

        <li class="nav-item ">
            <NavLink class="nav-link" href="Grades">
                Grades
            </NavLink>
        </li>

        <li class="nav-item">
            <NavLink class="nav-link" href="Employees">
                Employees
            </NavLink>
        </li>

        <li class="nav-item">
            <NavLink class="nav-link" href="Invoice">
                Invoice
            </NavLink>
        </li>
        <AuthorizeView>
            <Authorized>
                <li class="nav-item">
                    <NavLink class="logout-button nav-link " @onclick="AuthenticationService.Logout"><div>Log Out</div></NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
    </ul>
</div>

@code {


    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
