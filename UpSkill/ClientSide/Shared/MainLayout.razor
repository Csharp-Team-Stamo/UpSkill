@inherits LayoutComponentBase

<div class="wrapper">
    <AuthorizeView>
        <div class="header">
            <Header></Header>
        </div>
        <div class="sidebar-1">
            <div class="sticky-content">
                <NavMenu />
            </div>
        </div>
    </AuthorizeView>

    <div class="content">
        <div class="sticky-spacer"></div>
        <div class="sticky-content">
            @Body
        </div>
    </div>
    <div class="footer">
        <Footer></Footer>
    </div>
</div>

<BlazoredToasts Position="ToastPosition.BottomRight"
                Timeout="10"
                IconType="IconType.Material"
                ErrorIcon="error_outline"
                InfoIcon="school"
                SuccessIcon="done_outline"
                WarningIcon="warning" ></BlazoredToasts>
