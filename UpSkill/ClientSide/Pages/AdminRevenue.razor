@page "/admin/revenue"
@layout AdminLayout

@using UpSkill.Infrastructure.Models.Admin

<style>
    .add-btn {
        height: 30px;
        line-height: 30px;
        width: 30px;
        font-size: 2em;
        font-weight: bold;
        border-radius: 50%;
        background-color: lemonchiffon;
        color: #296CFB;
        cursor: pointer;
    }

    .underline {
        text-decoration: none;
        position: relative;
    }

        .underline:after {
            position: absolute;
            content: '';
            height: 1px;
            /* adjust this to move up and down. 
               You may have to adjust the line height of the paragraph if you move it down a lot. */
            bottom: 0px;
            /****** 
       optional values below 
       ******/
            /* center - (optional) use with adjusting width   */
            margin: 0 auto;
            left: 0;
            right: 0;
            width: 95%;
            background: black;
        }

    .head-underline {
        text-decoration: none;
        position: relative;
    }

        .head-underline:after {
            position: absolute;
            content: '';
            height: 1px;
            /* adjust this to move up and down. 
               You may have to adjust the line height of the paragraph if you move it down a lot. */
            bottom: 0px;
            /****** 
       optional values below 
       ******/
            /* center - (optional) use with adjusting width   */
            margin: 0 auto;
            left: 0;
            right: 0;
            width: 95%;
            background: white;
        }


    th.cell-header-right {
        padding-right: 1.5em;
    }

    th.cell-header-left {
        padding-left: 5.5em;
    }

    td.cell-right {
        padding-right: 1.3em;
    }

    td.cell-left {
        padding-left: 5.5em;
    }
</style>

@*<h3>AdminRevenue</h3>*@

<div class="mx-auto my-5">
    <table class="table table-borderless shadow mt-4" style="line-height: 2.5em">
        <thead class="border-bottom-0">
            <tr class="" style="color: white; background-color: #296cfb">
                <th class="font-weight-bold text-left pl-4 cell-header-left">
                    Course/Coach
                </th>
                <th class="text-left font-weight-bold pr-4 cell-header-right">
                    Revenue
                </th>
                <th class="text-left font-weight-bold pr-4 cell-header-right">
                    Expenses
                </th>
                <th class="text-left font-weight-bold pr-4 cell-header-right">
                    Profit
                </th>
                @*<th>
                    <div class="add-btn" @onclick="ShowPopup">+</div>
                </th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var courseData in totalRevenueData.CoursesInfo)
            {
                <tr class=" border-bottom-0 underline">
                    <td class="text-left pl-4 font-weight-bold cell-left">
                        @courseData.CourseName
                    </td>
                    <td class="text-left pr-4 cell-right">
                        @courseData.Revenue &euro;
                    </td>
                    <td class="text-left pr-4 cell-right">
                        @courseData.Expenses &euro;
                    </td>
                    <td class="text-left pr-4 cell-right">
                        @courseData.Profit &euro;
                    </td>
                </tr>
            }
            <tr>
                <td class="text-left pl-4 font-weight-bold cell-left">
                    Total
                </td>
                <td></td>
                <td></td>
                <td class="text-left pr-4 cell-right">@totalRevenueData.TotalProfit &euro;</td>
            </tr>
            @*<tr class="text-center">
                <td colspan="2" style="color: #16D696">
                    View More
                </td>
            </tr>*@
        </tbody>
    </table>
</div>

@code {
    private AdminTotalRevenueModel totalRevenueData =
        new AdminTotalRevenueModel
        {
            CoursesInfo = new List<AdminCourseRevenueListingModel>
            {
                    new AdminCourseRevenueListingModel
                    {
                        CourseName = "Marketing",
                        Revenue = 10000,
                        Expenses = 2000
                    },
                    new AdminCourseRevenueListingModel
                    {
                        CourseName = "Design",
                        Revenue = 5000,
                        Expenses = 2000
                    },
                    new AdminCourseRevenueListingModel
                    {
                        CourseName = "Management",
                        Revenue = 12000,
                        Expenses = 10000
                    }
            },
        };
}
