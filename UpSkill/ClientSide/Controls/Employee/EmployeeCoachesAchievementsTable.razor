<div class="mx-auto">
    <table class="table table_custom table-borderless">
        <thead class="head">
        <tr class="">
            <th class="cell-header-left">
                Coach
            </th>
            <th class="cell-header-left">
                 First
                Session
            </th>
            <th class="cell-header-left">
                 Last
                Session
            </th>
            <th class="cell-header-left">
                Sessions
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var coach in Coaches)
        {
            <tr class=" underline">
                <td class="cell-left-coach">
                    @coach.CoachName
                </td>
                <td class="cell-left">
                    @coach.FirstLiveSessionDate
                </td>
                <td class="cell-left">
                    @coach.LastLiveSessionDate
                </td>
                <td class="cell-left-sessions">
                    @coach.SessionsCompleted
                </td>
            </tr>
        }
        <tr><td></td></tr>
        </tbody>
    </table>
</div>


@code {

    [Parameter]
    public List<CoachInEmployeeAchievementsModel> Coaches { get; set; }

    private Dictionary<string, int> courses = new Dictionary<string, int>()

    {
        { "HTML & CSS", 5 },
        { "Photoshop", 3},
        { "C# - Basics", 13 },
        { "Data Structures", 2 }
    };
}